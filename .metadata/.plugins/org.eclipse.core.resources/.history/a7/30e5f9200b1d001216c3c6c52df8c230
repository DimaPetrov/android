package com.example.newapp;

import android.widget.ImageView;

public class MyAnimation {
	
	
	
	public void start(ImageView image, float xn, float yn, float xk, float yk)
	{
		float k = (yk-yn)/(xk-xn);
		float b = yn - k*xn;
		for (float i = xn; i<=xk; i+=0.1)
		{
			image.setLeft((int) i);
			image.setTop((int) (k*i+b));
		}
	}

}
