package com.example.newapp;

import java.util.Random;

import android.graphics.Color;
import android.graphics.Typeface;
import android.view.View;
import android.view.View.OnClickListener;
import android.view.animation.Animation;
import android.view.animation.AnimationUtils;
import android.view.animation.Animation.AnimationListener;
import android.widget.ImageView;
import android.widget.RelativeLayout;
import android.widget.TextView;
import android.widget.RelativeLayout.LayoutParams;

public class Letter extends GameSpace{

ModImageView[] collect;
	
	public void ColorObj()
	{
		collect = new ModImageView[15];
		for(int i = 0; i<15; i++)
			{
		collect[i] = new ModImageView();
		collect[i].image = new ImageView(cont);
			}
		collect[0].image.setBackgroundResource(R.drawable.o_album_en); collect[0].color = "Альбом";
		collect[1].image.setBackgroundResource(R.drawable.o_bed_en); collect[1].color = "Кровать";
		collect[2].image.setBackgroundResource(R.drawable.o_chair_en); collect[2].color = "Стул";
		collect[3].image.setBackgroundResource(R.drawable.o_cup_en); collect[3].color = "Кружка";
		collect[4].image.setBackgroundResource(R.drawable.o_doll_en); collect[4].color = "Кукла";
		collect[5].image.setBackgroundResource(R.drawable.o_fork_en); collect[5].color = "Вилка";
		collect[6].image.setBackgroundResource(R.drawable.o_gloves_en); collect[6].color = "Перчатки";
		collect[7].image.setBackgroundResource(R.drawable.o_lamp_en); collect[7].color = "Лампа";
		collect[8].image.setBackgroundResource(R.drawable.o_laptop_en); collect[8].color = "Ноутбук";
		collect[9].image.setBackgroundResource(R.drawable.o_pants_en); collect[9].color = "Трусы";
		collect[10].image.setBackgroundResource(R.drawable.o_phone_en); collect[10].color = "Телефон";
		collect[11].image.setBackgroundResource(R.drawable.o_plate_en); collect[11].color = "Тарелка";
		collect[12].image.setBackgroundResource(R.drawable.o_scissors_en); collect[12].color = "Ножницы";
		collect[13].image.setBackgroundResource(R.drawable.o_socks_en); collect[13].color = "Носки";
		collect[14].image.setBackgroundResource(R.drawable.o_spoon_en); collect[14].color = "Ложка";
		
	}
	
	public void startGame()
	{
		RelativeLayout.LayoutParams objParam[] = new RelativeLayout.LayoutParams[3];
		RelativeLayout.LayoutParams textParam[] = new RelativeLayout.LayoutParams[3];
		ImageView[] localItems = new ImageView[3];
		TextView[] localTexts = new TextView[3];
		boolean res = true;
		header = new TextView(cont);
		ColorObj();
		Random r = new Random();
		int rand = r.nextInt(15);
		header.setText("Выбери предмет на букву '"+collect[rand].color.charAt(0)+"'");
		myLayout.addView(header);
		header.setTypeface(type);
		header.setTextColor(Color.rgb(0xFF, 0xFF, 0xFF));
		header.setShadowLayer(4, 0, 4, Color.rgb(0x66, 0x33, 0x33));
		LayoutParams textLp = new LayoutParams(LayoutParams.WRAP_CONTENT, LayoutParams.WRAP_CONTENT);
		textLp.leftMargin = (int) (display.getWidth()/2 - header.getWidth()/2);
		header.setLayoutParams(textLp);
		header.setTextSize(30);
		int y = r.nextInt(3);
		int instx = 200;
		int insty = 100;
		for (int i =0; i<3; i++)
		{
			res = true;
			localItems[i] = new ImageView(cont);
			localTexts[i] = new TextView(cont);
			if (y == i)
			{
				localTexts[i].setText(collect[rand].color);
				localTexts[i].setId(0x666);
				localItems[i] = collect[rand].image;
				localItems[i].setId(0x666);
			}
			else
				while(res)
				{
					int x = r.nextInt(15);
					if ((collect[x].color.charAt(0)!=collect[rand].color.charAt(0))&&(collect[x].image.getId()!=0x111))
					{
						localTexts[i].setText(collect[x].color);
						localTexts[i].setId(0x111);
						collect[x].image.setId(0x111);
						localItems[i] = collect[x].image;
						res = false;
					}
				}	

			localTexts[i].setTypeface(type);
			localTexts[i].setTextColor(Color.rgb(0xFF, 0xFF, 0xFF));
			localTexts[i].setShadowLayer(4, 0, 4, Color.rgb(0x66, 0x33, 0x33));
			localTexts[i].setTextSize(30);
			
			textParam[i] = new RelativeLayout.LayoutParams(LayoutParams.WRAP_CONTENT, LayoutParams.WRAP_CONTENT);
			textParam[i].width = LayoutParams.WRAP_CONTENT;
			textParam[i].height = LayoutParams.WRAP_CONTENT;
			textParam[i].leftMargin = instx+110;
			textParam[i].topMargin = insty+10;
			myLayout.addView(localTexts[i], textParam[i]);
			
			objParam[i] = new RelativeLayout.LayoutParams(LayoutParams.WRAP_CONTENT, LayoutParams.WRAP_CONTENT);
			objParam[i].width = 100;
			objParam[i].height = 100;
			objParam[i].leftMargin = instx;
			objParam[i].topMargin = insty;
			myLayout.addView(localItems[i], objParam[i]);
			localItems[i].setOnClickListener(letterListener);
			localTexts[i].setOnClickListener(letterListener);
			insty+=105;
		}
		
	}
	
	OnClickListener letterListener = new OnClickListener(){
		public void onClick(View v)
		{
			if (v.getId() == 0x666)
			{
				Animation anim = AnimationUtils.loadAnimation(cont, R.anim.shapewin);
   				anim.setAnimationListener(new AnimationListener(){

					public void onAnimationEnd(Animation animation) {
						nextgame();
						
					}

					public void onAnimationRepeat(Animation animation) {
						// TODO Auto-generated method stub
						
					}

					public void onAnimationStart(Animation animation) {
						// TODO Auto-generated method stub
						
					}
   					
   				});
   				v.setOnClickListener(null);
   				v.startAnimation(anim);
				
			}
			else
   			{
   				Animation anim = AnimationUtils.loadAnimation(cont, R.anim.slide_right_in);
   				anim.setRepeatCount(3);
   				anim.setRepeatMode(Animation.REVERSE);
   				v.startAnimation(anim);
   			}
		}
	};
}
