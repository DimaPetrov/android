package com.example.newapp;

import java.util.Random;

import android.graphics.Color;
import android.widget.ImageView;
import android.widget.RelativeLayout;
import android.widget.TextView;
import android.widget.RelativeLayout.LayoutParams;

public class Letter extends GameSpace{

ModImageView[] collect;
	
	public void ColorObj()
	{
		collect = new ModImageView[15];
		for(int i = 0; i<15; i++)
			{
		collect[i] = new ModImageView();
		collect[i].image = new ImageView(cont);
			}
		collect[0].color = "А"; collect[0].image.setBackgroundResource(R.drawable.o_album_en);
		collect[1].color = "К"; collect[1].image.setBackgroundResource(R.drawable.o_bed_en);
		collect[2].color = "С"; collect[2].image.setBackgroundResource(R.drawable.o_chair_en);
		collect[3].color = "К"; collect[3].image.setBackgroundResource(R.drawable.o_cup_en);
		collect[4].color = "К"; collect[4].image.setBackgroundResource(R.drawable.o_doll_en);
		collect[5].color = "В"; collect[5].image.setBackgroundResource(R.drawable.o_fork_en);
		collect[6].color = "П"; collect[6].image.setBackgroundResource(R.drawable.o_gloves_en);
		collect[7].color = "Л"; collect[7].image.setBackgroundResource(R.drawable.o_lamp_en);
		collect[8].color = "Н"; collect[8].image.setBackgroundResource(R.drawable.o_laptop_en);
		collect[9].color = "Т"; collect[9].image.setBackgroundResource(R.drawable.o_pants_en);
		collect[10].color = "Т"; collect[10].image.setBackgroundResource(R.drawable.o_phone_en);
		collect[11].color = "Т"; collect[11].image.setBackgroundResource(R.drawable.o_plate_en);
		collect[12].color = "Н"; collect[12].image.setBackgroundResource(R.drawable.o_scissors_en);
		collect[13].color = "Н"; collect[13].image.setBackgroundResource(R.drawable.o_socks_en);
		collect[14].color = "Л"; collect[14].image.setBackgroundResource(R.drawable.o_spoon_en);
	}
	
	public void startGame()
	{
		RelativeLayout.LayoutParams objParam[] = new RelativeLayout.LayoutParams[3];
		ImageView[] localItems = new ImageView[3];
		boolean res = true;
		header = new TextView(cont);
		ColorObj();
		Random r = new Random();
		int rand = r.nextInt(15);
		header.setText("Выбери предмет на букву '"+collect[rand].color+"'");
		myLayout.addView(header);
		header.setTextSize(30);
		header.setTextColor(Color.BLACK);
		int y = r.nextInt(3);
		int instx = 200;
		int insty = 100;
		for (int i =0; i<3; i++)
		{
			localItems[i] = new ImageView(cont);
			
			if (y == i)
			{
				localItems[i] = collect[rand].image;
				localItems[i].setId(0x666);
			}
			else
				while(res)
				{
					int x = r.nextInt(15);
					if ((collect[x].color!=collect[rand].color)&&(collect[x].image.getId()!=0x111))
					{
						collect[x].image.setId(0x111);
						localItems[i] = collect[x].image;
						res = false;
					}
				}	

			
			objParam[i] = new RelativeLayout.LayoutParams(LayoutParams.WRAP_CONTENT, LayoutParams.WRAP_CONTENT);
			objParam[i].width = 100;
			objParam[i].height = 100;
			objParam[i].leftMargin = instx;
			objParam[i].topMargin = insty;
			myLayout.addView(localItems[i], objParam[i]);
			insty+=105;
		}
	}
}
